<div class="card bg-light mb-3">
    <div class="card-header">

        <div class="card-body">
            <div class="card-title" style="margin:10px">
                <form id="signup" name="signup" method="post" action="/signup">
                    <div class="input-group" style="margin:10px">
                        <label for="email" class="fa-border">Email Address</label>
                        <input class="text" name="email" type="email" style="width:300px" />
                    </div>
                    <div class="input-group" style="margin:10px">
                        <label for="firstname" class="fa-border">Firstname</label>
                        <input name="firstname" type="text" style="width:300px" />
                    </div>
                    <div class="input-group" style="margin:10px">
                        <label for="lastname" class="fa-border">Lastname</label>
                        <input name="lastname" type="text" style="width:300px" />
                    </div>
                    <div class="input-group" style="margin:10px">
                        <label for="password" class="fa-border">Password</label>
                        <input name="password" type="password" style="width:300px" />
                    </div>

                    <div class="form-group" style="margin:10px">
                        <input class="btn btn-success btn-lg login-btn" type="submit" value="Sign Up" />
                </form>
            </div>
        </div>
    </div>

</div>